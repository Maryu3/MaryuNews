

<%= form_for @post do |form| %>  
    <div class="field">
        <%= form.label :category_id, "category"  %>         <%#国%>
        <%= form.text_field :category_id %>
    </div>
    <div class="field">
        <%= form.label :country, "laungage_id"  %>          <%#言語%>
        <%= form.text_field :country %>
    </div>  
    <div class="field">
        <%= form.label :title, "sns_title"  %>
        <%= form.text_area :title,cols: 50, rows: 5 %>        
    </div> 
    <div class="field">
        <%= form.label :news %>
        <%= form.rich_text_area :news %>
    </div>
    <div class="field">
        <%= form.label :content, "content"  %>
        <%= form.text_area :content,cols: 50, rows: 5 %>        
    </div> 
    <div class="action">
        <%= form.submit %>
    </div>

<% end %>